
# Keybindings as well as color scheme/theme are
# seperated into their own config files.

import = [
  "~/.config/alacritty/themes/one_dark.toml",
  "~/.config/alacritty/keybinds.toml"
]

# General types of configuration settings go here
# along with anything that isnt part of above
# mentioned seperate configuration files.

[font]
size = 12

[font.bold]
family = "Hack Nerd Font"
style = "Bold"

[font.bold_italic]
family = "Hack Nerd Font"
style = "Bold Italic"

[font.italic]
family = "Hack Nerd Font"
style = "Italic"

[font.normal]
family = "Hack Nerd Font"
style = "Bold"

[scrolling]
history = 100000
multiplier = 3

# [window]
# opacity = 0.8

[mouse]
hide_when_typing = true
